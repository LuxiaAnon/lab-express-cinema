<section id="oneMovie">
<a href="http://localhost:3000/movies" class="button">Go back</a>

<div class="movie-details">
    <div>
        <img src="{{movie.image}}" alt="{{movie.title}}">
    </div>
<div id="blablamovie">
    <h1 class="movie-title">{{movie.title}}</h1>
    <h3 class="movie-director">Director: {{movie.director}}</h3>
    <h4 class="stars">Stars</h4>
    <ul>
        {{#each movie.stars}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <p>{{movie.description}}</p>
    <p>
        {{#each movie.showtimes}}
        {{this}} |
        {{/each}}
    </ul>
</div>
</div>
</section>